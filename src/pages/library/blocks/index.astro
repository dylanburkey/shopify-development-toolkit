---
import Dashboard from '../../../layouts/Dashboard.astro';
import { getCollection } from 'astro:content';

const blocks = await getCollection('blocks');

// Group blocks by category
const categories = blocks.reduce((acc, block) => {
  const cat = block.data.category;
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(block);
  return acc;
}, {} as Record<string, typeof blocks>);
---

<Dashboard title="Blocks" activeNav="blocks">
  <div class="mb-6">
    <a href="/library" class="inline-flex items-center gap-1 text-sm text-gray-500 hover:text-gray-700 mb-4">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Library
    </a>
    <p class="text-gray-600">Reusable block components for Shopify sections.</p>
  </div>

  <div class="space-y-8">
    {Object.entries(categories).map(([category, items]) => (
      <div>
        <h2 class="text-lg font-semibold text-gray-900 capitalize mb-4">{category}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          {items.map((block) => (
            <a href={`/library/blocks/${block.data.slug}`} class="bg-white rounded-xl shadow-sm border border-gray-200 hover:border-emerald-300 hover:shadow-md transition-all p-4 group">
              <div class="flex items-center gap-3 mb-3">
                <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 group-hover:text-emerald-600 transition-colors">{block.data.name}</h3>
                  <span class="text-xs text-gray-400 capitalize">{block.data.category}</span>
                </div>
              </div>
              <p class="text-sm text-gray-500 line-clamp-2 mb-2">{block.data.description || 'No description'}</p>
              <p class="text-xs text-gray-400">{block.data.settings.length} settings</p>
            </a>
          ))}
        </div>
      </div>
    ))}
  </div>
</Dashboard>
