---
import Dashboard from '../../layouts/Dashboard.astro';
import { getCollection } from 'astro:content';

const sections = await getCollection('sections');
const blocks = await getCollection('blocks');
const metaobjects = await getCollection('metaobjects');
---

<Dashboard title="Component Library" activeNav="library">
  <div class="mb-8">
    <p class="text-gray-600">Reusable Shopify theme components ready for your projects.</p>
  </div>

  <div class="space-y-8">
    <!-- Sections -->
    <div>
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Sections</h2>
        <a href="/library/sections" class="text-sm text-emerald-600 hover:text-emerald-700 font-medium">View all</a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {sections.map((section) => (
          <a href={`/library/sections/${section.data.slug}`} class="bg-white rounded-xl shadow-sm border border-gray-200 hover:border-emerald-300 hover:shadow-md transition-all overflow-hidden group">
            <div class="h-24 bg-gradient-to-br from-purple-50 to-purple-100 flex items-center justify-center">
              <svg class="w-10 h-10 text-purple-300 group-hover:text-purple-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6z" />
              </svg>
            </div>
            <div class="p-4">
              <div class="flex items-center justify-between mb-1">
                <h3 class="font-medium text-gray-900 group-hover:text-emerald-600 transition-colors">{section.data.name}</h3>
                <span class="px-2 py-0.5 text-xs bg-purple-100 text-purple-700 rounded-full">{section.data.category}</span>
              </div>
              <p class="text-sm text-gray-500 line-clamp-2">{section.data.description || 'No description'}</p>
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Blocks -->
    <div>
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Blocks</h2>
        <a href="/library/blocks" class="text-sm text-emerald-600 hover:text-emerald-700 font-medium">View all</a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {blocks.map((block) => (
          <a href={`/library/blocks/${block.data.slug}`} class="bg-white rounded-xl shadow-sm border border-gray-200 hover:border-emerald-300 hover:shadow-md transition-all p-4 group">
            <div class="flex items-center gap-3 mb-2">
              <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-gray-900 group-hover:text-emerald-600 transition-colors">{block.data.name}</h3>
                <span class="text-xs text-gray-400">{block.data.category}</span>
              </div>
            </div>
            <p class="text-sm text-gray-500 line-clamp-2">{block.data.description || 'No description'}</p>
          </a>
        ))}
      </div>
    </div>

    <!-- Metaobjects -->
    <div>
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold text-gray-900">Metaobjects</h2>
        <a href="/library/metaobjects" class="text-sm text-emerald-600 hover:text-emerald-700 font-medium">View all</a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {metaobjects.map((metaobject) => (
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 hover:border-emerald-300 hover:shadow-md transition-all p-4 group">
            <div class="flex items-center gap-3 mb-2">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-gray-900 group-hover:text-emerald-600 transition-colors">{metaobject.data.name}</h3>
                <span class="text-xs text-gray-400">{metaobject.data.fields.length} fields</span>
              </div>
            </div>
            <p class="text-sm text-gray-500 line-clamp-2">{metaobject.data.description || 'No description'}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</Dashboard>
