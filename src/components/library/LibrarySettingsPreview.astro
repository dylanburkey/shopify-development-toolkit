    block-size: 2.5rem;
    border: 1px solid #cbd5e1;
    border-radius: 0.375rem;
    cursor: pointer;
  }

  .color-value {
    flex: 1;
    padding: 0.625rem;
    font-size: 0.875rem;
    font-family: monospace;
    border: 1px solid #cbd5e1;
    border-radius: 0.375rem;
  }

  .no-settings {
    padding: 2rem;
    text-align: center;
    color: #64748b;
  }

  .hidden {
    display: none;
  }

  .retry-btn {
    padding: 0.5rem 1rem;
    background: #2563eb;
    color: white;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .retry-btn:hover {
    background: #1d4ed8;
  }

