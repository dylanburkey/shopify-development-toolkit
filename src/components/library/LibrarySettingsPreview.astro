    display: none;
  }

  .checkbox-toggle {
    position: relative;
    inline-size: 2.5rem;
    block-size: 1.5rem;
    background: #cbd5e1;
    border-radius: 9999px;
    transition: background 0.2s;
  }

  .checkbox-toggle::after {
    content: '';
    position: absolute;
    inset-block-start: 0.125rem;
    inset-inline-start: 0.125rem;
    inline-size: 1.25rem;
    block-size: 1.25rem;
    background: white;
    border-radius: 50%;
    transition: transform 0.2s;
  }

  .setting-checkbox input:checked + .checkbox-toggle {
    background: #2563eb;
  }

  .setting-checkbox input:checked + .checkbox-toggle::after {
    transform: translateX(1rem);
  }

  .setting-range {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .range-slider {
    flex: 1;
  }

  .range-display {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .range-value {
    inline-size: 4rem;
    padding: 0.375rem 0.5rem;
    font-size: 0.875rem;
    border: 1px solid #cbd5e1;
    border-radius: 0.375rem;
    text-align: center;
  }

