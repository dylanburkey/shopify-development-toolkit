    display: flex;
    gap: 0.25rem;
    padding: 0.25rem;
    background: #e2e8f0;
    border-radius: 0.375rem;
  }

  .viewport-btn {
    padding: 0.5rem;
    background: transparent;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    color: #64748b;
    transition: all 0.15s;
    display: flex;
  }

  .viewport-btn:hover {
    color: #1e293b;
  }

  .viewport-btn.active {
    background: white;
    color: #2563eb;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
  }

  .preview-frame {
    position: relative;
    block-size: 500px;
    background: white;
  }

  .preview-iframe {
    inline-size: 100%;
    block-size: 100%;
    border: none;
    display: block;
    transition: inline-size 0.3s ease;
    margin-inline: auto;
  }

  .preview-iframe.viewport-tablet {
    inline-size: 768px;
    max-inline-size: 100%;
  }

  .preview-iframe.viewport-mobile {
    inline-size: 375px;
    max-inline-size: 100%;
  }

  .preview-loading,
  .preview-error {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #f8fafc;
    gap: 1rem;
  }

  .loading-spinner {
    inline-size: 2.5rem;
    block-size: 2.5rem;
    border: 3px solid #e2e8f0;
    border-block-start-color: #2563eb;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .preview-footer {
    padding: 0.75rem 1rem;
    border-block-start: 1px solid #e2e8f0;
    background: #f8fafc;
    font-size: 0.75rem;
    color: #94a3b8;
    text-align: end;
  }

  /* Settings Panel */
  .settings-panel {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 0.75rem;
    overflow: hidden;
    max-block-size: 700px;
    display: flex;
    flex-direction: column;
  }

  .settings-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-block-end: 1px solid #e2e8f0;
    background: #f8fafc;
  }

  .settings-title {
    font-size: 1rem;
    font-weight: 600;
    color: #1e293b;
    margin: 0;
  }

  .reset-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    color: #64748b;
    background: white;
