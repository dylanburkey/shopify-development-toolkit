---
interface Props {
  activeNav?: string;
}

const { activeNav = 'dashboard' } = Astro.props;

const navigation = [
  { name: 'Dashboard', href: '/', icon: 'home', id: 'dashboard' },
  { name: 'Projects', href: '/projects', icon: 'folder', id: 'projects' },
  { name: 'Component Library', href: '/library', icon: 'cube', id: 'library' },
];

const secondaryNav = [
  { name: 'Sections', href: '/library/sections', icon: 'layout', id: 'sections' },
  { name: 'Blocks', href: '/library/blocks', icon: 'box', id: 'blocks' },
  { name: 'Metaobjects', href: '/library/metaobjects', icon: 'database', id: 'metaobjects' },
];
---

<aside class="w-64 bg-gray-900 text-white flex flex-col">
  <div class="p-4 border-b border-gray-800">
    <a href="/" class="flex items-center gap-3">
      <div class="w-8 h-8 bg-emerald-500 rounded-lg flex items-center justify-center">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
        </svg>
      </div>
      <span class="font-semibold text-lg">Shopify Toolkit</span>
    </a>
  </div>

  <nav class="flex-1 p-4 space-y-1">
    <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">
      Main
    </div>
    {navigation.map((item) => (
      <a
        href={item.href}
        class:list={[
          'flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors',
          activeNav === item.id
            ? 'bg-gray-800 text-white'
            : 'text-gray-300 hover:bg-gray-800 hover:text-white'
        ]}
      >
        {item.icon === 'home' && (
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
        )}
        {item.icon === 'folder' && (
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
          </svg>
        )}
        {item.icon === 'cube' && (
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
        )}
        {item.name}
      </a>
    ))}

    <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider mt-6 mb-3">
      Library
    </div>
    {secondaryNav.map((item) => (
      <a
        href={item.href}
        class:list={[
          'flex items-center gap-3 px-3 py-2 rounded-lg text-sm font-medium transition-colors',
          activeNav === item.id
            ? 'bg-gray-800 text-white'
            : 'text-gray-300 hover:bg-gray-800 hover:text-white'
        ]}
      >
        {item.icon === 'layout' && (
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
          </svg>
        )}
        {item.icon === 'box' && (
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
          </svg>
        )}
        {item.icon === 'database' && (
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
          </svg>
        )}
        {item.name}
      </a>
    ))}
  </nav>

  <div class="p-4 border-t border-gray-800">
    <a
      href="https://shopify.dev/docs/storefronts/themes"
      target="_blank"
      rel="noopener noreferrer"
      class="flex items-center gap-2 text-sm text-gray-400 hover:text-white transition-colors"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
      Shopify Docs
    </a>
  </div>
</aside>
