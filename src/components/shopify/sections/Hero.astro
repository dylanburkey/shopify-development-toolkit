---
interface Props {
  heading?: string;
  subheading?: string;
  buttonLabel?: string;
  buttonLink?: string;
  backgroundImage?: string;
  overlayOpacity?: number;
  height?: 'small' | 'medium' | 'large';
  contentAlignment?: 'left' | 'center' | 'right';
}

const {
  heading = 'Welcome to our store',
  subheading = 'Discover our latest collection',
  buttonLabel = 'Shop now',
  buttonLink = '/collections/all',
  backgroundImage,
  overlayOpacity = 40,
  height = 'medium',
  contentAlignment = 'center',
} = Astro.props;

const heightClasses = {
  small: 'min-h-[300px]',
  medium: 'min-h-[500px]',
  large: 'min-h-[700px]',
};

const alignmentClasses = {
  left: 'items-start text-left',
  center: 'items-center text-center',
  right: 'items-end text-right',
};
---

<section class={`relative flex flex-col justify-center ${heightClasses[height]} ${alignmentClasses[contentAlignment]} px-8 py-16`}>
  {backgroundImage ? (
    <div class="absolute inset-0">
      <img src={backgroundImage} alt="" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-black" style={`opacity: ${overlayOpacity / 100}`}></div>
    </div>
  ) : (
    <div class="absolute inset-0 bg-gradient-to-br from-gray-800 to-gray-900"></div>
  )}

  <div class="relative z-10 max-w-3xl">
    {heading && (
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
        {heading}
      </h1>
    )}

    {subheading && (
      <p class="text-lg md:text-xl text-gray-200 mb-8">
        {subheading}
      </p>
    )}

    {buttonLabel && (
      <a
        href={buttonLink}
        class="inline-block px-8 py-3 bg-white text-gray-900 font-medium rounded-lg hover:bg-gray-100 transition-colors"
      >
        {buttonLabel}
      </a>
    )}
  </div>
</section>

