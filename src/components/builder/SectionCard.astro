---
interface Props {
  id: number;
  sectionSlug: string;
  name: string;
  category: string;
  description?: string;
  position: number;
  projectSlug: string;
}

const { id, sectionSlug, name, category, description, position, projectSlug } = Astro.props;
---

<div
  class="section-card"
  data-section-id={id}
  data-section-slug={sectionSlug}
  data-position={position}
  draggable="true"
>
  <div class="drag-handle" title="Drag to reorder">
    <svg class="handle-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
    </svg>
  </div>

  <div class="card-content">
    <div class="card-header">
      <div class="category-badge">{category}</div>
      <h3 class="card-title">{name}</h3>
      {description && <p class="card-description">{description}</p>}
    </div>

    <div class="preview-container">
      <iframe
        class="section-preview"
        data-src={`/api/render/section?section=${sectionSlug}&viewport=mobile`}
        loading="lazy"
        sandbox="allow-same-origin"
        title={`Preview of ${name}`}
      ></iframe>
      <div class="preview-loading">
        <div class="loading-spinner"></div>
        <span>Loading preview...</span>
      </div>
    </div>
  </div>

  <div class="card-actions">
    <button
      type="button"
      class="action-btn settings-btn"
      data-section-id={id}
      data-section-slug={sectionSlug}
      data-section-name={name}
      data-project-slug={projectSlug}
      title="Edit section settings"
    >
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
    </button>
    <button
      type="button"
      class="action-btn schema-btn"
      data-section-id={id}
      data-section-slug={sectionSlug}
      data-project-slug={projectSlug}
      title="Edit section schema"
    >
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
      </svg>
    </button>
    <a
      href={`/library/sections/${sectionSlug}`}
      class="action-btn view-btn"
      title="View section details"
    >
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
    </a>
    <button
      type="button"
      class="action-btn remove-btn"
      data-section-id={id}
      data-project-slug={projectSlug}
      title="Remove from project"
    >
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    </button>
  </div>
</div>

<style>
  .section-card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 0.75rem;
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 0;
    transition: box-shadow 0.15s, border-color 0.15s, transform 0.15s;
    cursor: grab;
    container-type: inline-size;
  }

  .section-card:hover {
    border-color: #cbd5e1;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .section-card.dragging {
    opacity: 0.5;
    cursor: grabbing;
  }

  .section-card.drag-over {
    border-color: #2563eb;
    box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.2);
  }

  .drag-handle {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 0.75rem;
    background: #f8fafc;
    border-inline-end: 1px solid #e2e8f0;
    border-radius: 0.75rem 0 0 0.75rem;
    cursor: grab;
  }

  .drag-handle:active {
    cursor: grabbing;
  }

  .handle-icon {
    inline-size: 1.25rem;
    block-size: 1.25rem;
    color: #94a3b8;
  }

  .card-content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    min-inline-size: 0;
  }

  .card-header {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .category-badge {
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #6366f1;
    background: #eef2ff;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    align-self: flex-start;
  }

  .card-title {
    font-size: 1rem;
    font-weight: 600;
    color: #1e293b;
    margin: 0;
  }

  .card-description {
    font-size: 0.75rem;
    color: #64748b;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .preview-container {
    position: relative;
    aspect-ratio: 16 / 9;
    background: #f1f5f9;
    border-radius: 0.5rem;
    overflow: hidden;
    min-block-size: 100px;
  }

  .section-preview {
    inline-size: 100%;
    block-size: 100%;
    border: none;
    pointer-events: none;
  }

  .section-preview.loaded + .preview-loading {
    display: none;
  }

  .preview-loading {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #f1f5f9;
    color: #64748b;
    font-size: 0.75rem;
  }

  .loading-spinner {
    inline-size: 1.5rem;
    block-size: 1.5rem;
    border: 2px solid #e2e8f0;
    border-block-start-color: #6366f1;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .card-actions {
    display: flex;
    flex-direction: column;
    padding: 0.5rem;
    gap: 0.25rem;
    border-inline-start: 1px solid #e2e8f0;
    background: #f8fafc;
    border-radius: 0 0.75rem 0.75rem 0;
  }

  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    inline-size: 2rem;
    block-size: 2rem;
    border: none;
    border-radius: 0.375rem;
    background: transparent;
    cursor: pointer;
    transition: background 0.15s, color 0.15s;
    color: #64748b;
    text-decoration: none;
  }

  .action-btn svg {
    inline-size: 1.125rem;
    block-size: 1.125rem;
  }

  .settings-btn:hover {
    background: #dbeafe;
    color: #2563eb;
  }

  .view-btn:hover {
    background: #e0e7ff;
    color: #4f46e5;
  }

  .remove-btn:hover {
    background: #fee2e2;
    color: #dc2626;
  }

  @container (max-width: 400px) {
    .section-card {
      grid-template-columns: 1fr;
    }

    .drag-handle {
      padding: 0.5rem;
      border-inline-end: none;
      border-block-end: 1px solid #e2e8f0;
      border-radius: 0.75rem 0.75rem 0 0;
    }

    .handle-icon {
      transform: rotate(90deg);
    }

    .card-actions {
      flex-direction: row;
      justify-content: flex-end;
      border-inline-start: none;
      border-block-start: 1px solid #e2e8f0;
      border-radius: 0 0 0.75rem 0.75rem;
    }
  }
</style>
